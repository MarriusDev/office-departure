<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>

<VBox alignment="TOP_CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.Departure.Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <!-- Styl pro Label s informacemi -->
    <Label fx:id="welcomeText"/>

    <!-- Styl pro TextField -->
    <TextField fx:id="inputTimeField"/>

    <!-- Tlačítko s animací a barvou -->
    <Button fx:id="calculateButton"/>

    <!-- Výstupní label s barvou pro výsledek -->
    <Label fx:id="outputLabel"/>
</VBox>
